@page
@model webPickleballTerrebonne.Areas.Admin.Pages.Membres.CreerModel
@{
    Model.ViewData["Title"] = "Ajouter un membre";
}
<div class="container">
    <h4>Ajouter un nouveau membre</h4>
    <form method="post">
        <div class="row gx-2">
            <div class="col">
                <div class="mb-2">
                    <label asp-for="MembreOtd.Nom" class="form-label"></label>
                    <input asp-for="MembreOtd.Nom" class="form-control" />
                    <span asp-validation-for="MembreOtd.Nom" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="MembreOtd.Prenom" class="form-label"></label>
                    <input asp-for="MembreOtd.Prenom" class="form-control" />
                    <span asp-validation-for="MembreOtd.Prenom" class="text-danger"></span>
                </div>
                <div>
                    <input type="submit" value="Enregistrer" class="btn btn-primary" />
                    <a asp-area="admin" asp-page="/membres/index" class="btn btn-danger">Annuler</a>
                </div>
            </div>
        </div>
    </form>
</div>
