@page
@model webPickleballTerrebonne.Areas.Admin.Pages.Membres.IndexModel
@{
    ViewBag.Title = "Liste des membres";
}
<div class="container">
    <h2>Liste des membres</h2>
    <form method="get">
        <div class="row g-2 d-flex justify-content-end">
            <div class="col-auto">
                <input type="text" name="SearchString" value="@Model.CurrentFilter" class="form-control" placeholder="Rechercher par nom" />
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary mb-3">Rechercher</button>
            </div>
        </div>
        <div class="d-flex justify-content-end mb-3">
            <a asp-area="admin" asp-page="/membres/index" class="text-black">Afficher la liste complète</a>
        </div>
    </form>

    <div>
        <div class="row">
            <div class="col-md-1">
                <a asp-area="admin" asp-page="/membres/index" asp-route-sortOrder="@Model.TrierNom" class="text-decoration-none text-black">Nom</a>
            </div>
            <div class="col-1">
                <a asp-area="admin" asp-page="/membres/index" asp-route-sortOrder="@Model.TrierPrenom" class="text-decoration-none text-black">Prénom</a>
            </div>
            <div class="col-1">
                Actif
            </div>
            <div class="col-1">
                <a asp-area="admin" asp-page="/membres/index" asp-route-sortOrder="@Model.TrierDate" class="text-decoration-none text-black">Depuis</a>
            </div>
            <div class="col-1">
                Rôle
            </div>
            <div class="col-5">
            </div>
            <div class="col-2">
                <a class="btn btn-outline-dark" asp-area="admin" asp-page="/membres/creer">Ajouter un membre</a>
            </div>
        </div>
    </div>

    <table class="table table-sm align-middle">
        <thead>
            <tr>
                <th class="col-1">
                    <a asp-area="admin" asp-page="/membres/index" asp-route-sortOrder="@Model.TrierNom" class="text-decoration-none text-black">Nom</a>
                </th>
                <th class="col-1">
                    <a asp-area="admin" asp-page="/membres/index" asp-route-sortOrder="@Model.TrierPrenom" class="text-decoration-none text-black">Prénom</a>

                </th>
                <th class="col-1 text-center">Actif</th>
                <th class="col-1 text-center">
                    <a asp-area="admin" asp-page="/membres/index" asp-route-sortOrder="@Model.TrierDate" class="text-decoration-none text-black">Depuis</a>
                </th>
                <th class="col-1 text-center">Rôle</th>
                <th class="col-5"></th>
                <td class="col-2 text-end"><a class="btn btn-outline-dark" asp-area="admin" asp-page="/membres/creer">Ajouter un membre</a></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var membre in Model.MembresOtd)
            {
                <tr>
                    <td>@membre.Nom</td>
                    <td>@membre.Prenom</td>
                    <td class="text-center">@membre.MembreActif</td>
                    <td class="text-center">@membre.Depuis.ToShortDateString()</td>
                    <td class="text-center">@membre.Roles[0]</td>
                    <td></td>
                    <td class="text-end">
                        <a asp-area="admin" asp-page="/membres/details" asp-route-idMembre="@membre.Id" class="btn btn-outline-dark"><span class="materialIcons">arrow_outward</span></a>
                        <a asp-area="admin" asp-page="/membres/modifier" asp-route-idMembre="@membre.Id" class="btn btn-outline-primary"><span class="materialIcons">edit</span></a>
                        <a asp-area="admin" asp-page="/membres/supprimer" asp-route-idMembre="@membre.Id" class="btn btn-outline-danger"><span class="materialIcons">delete</span></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section ScriptsEntete {
    <link href="~/css/form.min.css" rel="stylesheet" />
}